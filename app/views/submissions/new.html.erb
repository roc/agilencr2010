<div class="content_left">
  <div class="innercontent_area">
	<h2>Session Details</h2>
	<%= form_for(@submission, :url => user_submissions_path, :html => { :class => "standard" }) do |f| %>
	  <fieldset class="clearfix">
		<%= render 'error_messages' %>

		<p class="text">
		  <%= f.label :title, "Title *", :class => "required" %>
		  <%= f.text_field :title, :class => "text" %>
		</p>

		<p class="text">
		  <%= f.label :type, "Type *", :class => "required" %>
		  <%= f.select :submission_type, { "Presentation" => "PRESENTATION", "Discussion / Open Space" => "DISCUSSION", "Workshop" => "WORKSHOP" }, :class => "select_menu" %>
		</p>

		  <p class="text">
			<%= f.label :type, "Audience *", :class => "required" %>
			<%= f.select :audience_type, { "Beginner" => "BEGINNER", "Experienced" => "EXPERIENCED", "Experts" => "EXPERTS" }, :class => "select_menu" %>
		  </p>

		<p class="text">
		  <%= f.label :abstract, "Abstract *", :class => "required" %>
		  <%= f.text_area(:abstract, {:title => 'Please explain in few words what the session is about and what the audience can gain from it.'}) %>
		</p>

		<p class="text">
		  <%= f.label :comments, "Comments", :class => "required" %>
		  <%= f.text_area :comments %>
		</p>

		<p class="text">
		  <%= f.label :duration, "Approx. duration (in minutes) *", :class => "required" %>
		  <%= f.text_field :duration, :class => "text" %>
		</p>

		<%= f.hidden_field :submission_status, :value => "Submitted" %>

		<p class="submit">
		  <label for="submit">&nbsp;</label>
		  <%= f.submit "Save", :class => "btn_submit" %>
		</p>
	  </fieldset>
	<% end %>
  </div>
</div>
<script language="javascript">
  $(document).ready(function() {
	// select all desired input fields and attach tooltips to them
	$("#new_submission [id*=submission_abstract]").tooltip({
	  // place tooltip on the right edge
	  position: "center right",
	  // a little tweaking of the position
	  offset: [-2, 10],
	  // use the built-in fadeIn/fadeOut effect
	  //effect: "fade",
	  // custom opacity setting
	  opacity: 0.7
	});
  });
</script>


